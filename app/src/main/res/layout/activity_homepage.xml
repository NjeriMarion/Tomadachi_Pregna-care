<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage">

    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="cursive"
        android:text="Tomadachi health"
        android:textColor="#1A5A77"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/svhomeimages"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="1dp"
        android:background = "@color/cyanOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvname">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivmomone"
                android:layout_width="200sp"
                android:layout_height="220dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/pregtwo" />

            <ImageView
                android:id="@+id/ivmomtwo"
                android:layout_width="200sp"
                android:layout_height="220dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/pregone" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvhometitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="age-group specified care"
        android:textColor="#1A5A77"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="348dp"
        app:layout_constraintTop_toBottomOf="@+id/tvcolortext" />

    <ImageView
        android:id="@+id/ivmenu"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <ScrollView
        android:id="@+id/svhomeages"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="1dp"
        android:background="@color/cyanOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvhometitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.chip.Chip
                android:id="@+id/cpgroupone"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="186dp"
                android:text="      Age 10 - 16"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/tvhometitle"
                app:layout_constraintStart_toStartOf="@+id/tvhometitle"
                app:layout_constraintTop_toTopOf="@+id/svhomeages" />

            <com.google.android.material.chip.Chip
                android:id="@+id/cpgrouptwo"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginTop="18dp"
                android:backgroundTint="@color/grey"
                android:layout_marginStart="95dp"
                android:text="      Age 17 - 22"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/cpgroupone"
                app:layout_constraintStart_toStartOf="@+id/cpgroupone"
                app:layout_constraintTop_toBottomOf="@+id/cpgroupone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/cpgroupthree"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginTop="18dp"
                android:text="      Age 23 - 29"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"
                android:layout_marginStart="95dp"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/cpgrouptwo"
                app:layout_constraintStart_toStartOf="@+id/cpgrouptwo"
                app:layout_constraintTop_toBottomOf="@+id/cpgrouptwo" />

            <com.google.android.material.chip.Chip
                android:id="@+id/cpgroupfour"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginTop="18dp"
                android:text="      Age 30 - 36"
                android:backgroundTint="@color/grey"
                android:layout_marginStart="95dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/cpgroupthree"
                app:layout_constraintStart_toStartOf="@+id/cpgroupthree"
                app:layout_constraintTop_toBottomOf="@+id/cpgroupthree" />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvcolortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"
        android:text="For all health matters for your pregnancy check our"
        android:textColor="#1A5A77"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svhomeimages" />

</androidx.constraintlayout.widget.ConstraintLayout>